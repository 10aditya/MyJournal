<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image_viewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.utile.myjournal.activities.ImageViewerActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarlayout"
        android:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00000000">

        <android.support.v7.widget.Toolbar
            android:id="@+id/actionbar"
            android:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:navigationIcon="@drawable/ic_back_arrow_white"
            app:titleTextColor="@android:color/white" />
    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/fullscreenimageviewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/detailaboutimage"
        android:layout_width="match_parent"
        android:layout_height="130sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:weightSum="2"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/DateAndTime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/locationinimageviewer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
    </LinearLayout>
</RelativeLayout>
